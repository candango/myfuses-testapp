<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE fusebox PUBLIC "-//IFLUX//DTD FUSEBOX 4.1 Strict//EN"
    "http://iflux.org/xml/ifbox/dtd/ifbox.dtd">
<!-- $Id: fusebox.xml,v 1.6 2006/03/15 19:46:42 piraz Exp $ -->
<!--
    All circuits, classes, lexicons, parameters, globalfuseactions and plugins 
    used in Fusebox Application are configured in here.
    We are using the ifbox PHP 5 style.
    More information about Fuse Box: 
        http://www.fusebox.org
        http://sourceforge.net/projects/phpfb4/
    @author: Flavio Garcia flavio@viacerrado.com
-->
<fusebox>	
	<circuits>
		<circuit alias="main" path="main/" parent="" />
		<circuit alias="basic" path="basic/" parent="main" />
	</circuits>
    
    
    <classes>
        <class alias="Account" classpath="classes/Account.class.php" />
    </classes>
    
    
    <lexicons>
        <lexicon namespace="" path=""/>
    </lexicons>
    
    
	<parameters>
        <parameter name="fuseactionVariable" value="fuseaction" />
        <parameter name="defaultFuseaction" value="main.menu" />
        <parameter name="precedenceFormOrUrl" value="form"/>
        <parameter name="mode" value="production"/>
        <parameter name="password" value=""/>
        <parameter name="parseWithComments" value="true" />
        <parameter name="conditionalParse" value="true" />
        <parameter name="allowLexicon" value="true" />
        <parameter name="ignoreBadGrammar" value="true"/>
        <parameter name="useAssertions" value="true" />
        <parameter name="scriptLanguage" value="php5" />
        <parameter name="scriptFileDelimiter" value="php"/>
        <parameter name="maskedFileDelimiters" value="htm,cfm,cfml,php,php4,asp,aspx,class,inc"/>
        <parameter name="characterEncoding" value="iso-8859-1"/>
	</parameters> 

	<globalfuseactions>
		<preprocess>
			<do action="main.header"/>
		</preprocess>
		<postprocess>
			<do action="main.footer"/>
		</postprocess>
	</globalfuseactions>
	
	<plugins>
		<phase name="preProcess">
            
		</phase>
		<phase name="preFuseaction">
		</phase>
		<phase name="postFuseaction">
		</phase>
		<phase name="fuseactionException">
			
		</phase>		
		<phase name="postProcess">
		</phase>
		<phase name="processError">
			
		</phase>
	</plugins>

</fusebox>
